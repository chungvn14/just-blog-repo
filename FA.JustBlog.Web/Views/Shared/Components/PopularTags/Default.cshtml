@model IList<FA.JustBlog.Core.Models.Tag>

@if (Model == null || !Model.Any())
{
    <p class="text-center text-muted">No tags available.</p>
}
else
{
    <div class="card">
        <div class="card-header text-center">
            <h3>Popular Tags</h3>
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var tag in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("ListPostsByTag", "Post", new { tag = tag.Name })" class="text-decoration-none">
                        @tag.Name
                    </a>
                    <span class="badge bg-primary rounded-pill">@tag.Count</span>
                </li>
            }
        </ul>
    </div>
}
