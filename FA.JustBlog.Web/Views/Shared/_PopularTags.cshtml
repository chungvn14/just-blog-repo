@model IList<FA.JustBlog.Core.Models.Tag>

<div class="popular-tags">
    <h5>Popular Tags</h5>
    <ul>
        @if (Model != null && Model.Any())
        {
            foreach (var tag in Model)
            {
                <li>
                    <a href="@Url.Action("ListPostsByTag", "Post", new { tagId = tag.Id })">
                        @tag.Name
                    </a>
                </li>
            }
        }
        else
        {
            <li>No popular tags available</li>
        }
    </ul>
</div>
