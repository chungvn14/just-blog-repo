@model FA.JustBlog.Core.Models.Comment

<div class="card shadow-sm mb-3" id="comment-@Model.Id">
    <div class="card-body">
        <!-- Comment Header -->
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                <strong>@Model.Name</strong>
                <small class="text-muted ml-2">@Model.CommentTime.ToString("MMMM dd, yyyy")</small>
            </div>
            @if (Model.Name == User.Identity.Name)
            {
                <button class="btn btn-danger btn-sm delete-comment" data-id="@Model.Id">Delete</button>
            }
        </div>

        <!-- Comment Text -->
        <p>@Model.CommentText</p>
    </div>
</div>
