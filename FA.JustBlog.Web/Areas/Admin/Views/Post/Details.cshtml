@model FA.JustBlog.Core.Models.Post

@{
    ViewData["Title"] = "Post Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4 text-info">Post Details</h1>

<div class="card shadow-lg border-light rounded-lg">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.ShortDescription)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ShortDescription)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.PostContent)</dt>
            <dd class="col-sm-9">  @Html.Raw(Model.PostContent)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.UrlSlug)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UrlSlug)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Published)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Published)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.PostedOn)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PostedOn)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Modified)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Modified)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.ViewCount)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ViewCount)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.RateCount)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RateCount)</dd>

            <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.TotalRate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalRate)</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-start mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-lg btn-primary mr-2">Edit</a>
    <a asp-action="Index" class="btn btn-lg btn-secondary">Back to List</a>
  
    @if (User.IsInRole("BlogOwner"))
    {
        <form asp-action="ChangePublishStatus" asp-route-id="@Model.Id" method="post" class="ml-2">
            <button type="submit" class="btn btn-lg @(Model.Published ? "btn-warning" : "btn-success")">
                @(Model.Published ? "Unpublish" : "Publish")
            </button>
        </form>
    }
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .card-body {
        padding: 30px;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }

    dt {
        font-size: 1.1rem;
    }

    dd {
        font-size: 1rem;
    }

    .btn {
        font-size: 1.2rem;
        padding: 12px 25px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .d-flex {
        gap: 20px;
    }
</style>
