@model FA.JustBlog.Core.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center text-danger">Delete Post</h1>

<div class="card shadow-sm border-light">
    <div class="card-body">
        <h3 class="text-danger font-weight-bold">Are you sure you want to delete this post?</h3>
        <hr />

        <dl class="row">
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Title)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.ShortDescription)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ShortDescription)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.PostContent)</strong></dt>
            <dd class="col-sm-9">@Html.Raw(Model.PostContent)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.UrlSlug)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UrlSlug)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Published)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Published)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.PostedOn)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PostedOn)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Modified)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Modified)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Category)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.ViewCount)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ViewCount)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.RateCount)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RateCount)</dd>

            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.TotalRate)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalRate)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete" class="mr-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-lg btn-danger">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-lg btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    h1 {
        font-size: 2.5rem;
    }

    h3 {
        font-size: 1.75rem;
    }

    .btn {
        font-size: 1.1rem;
        padding: 10px 20px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .d-flex {
        gap: 20px;
    }

    dl {
        margin-top: 20px;
    }
</style>
