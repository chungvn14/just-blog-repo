@model FA.JustBlog.Web.Areas.Admin.Models.PostCreateModel

@{
    ViewData["Title"] = "Create Post";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4 text-center text-primary">Create Post</h1>

<h4 class="text-center text-muted">Post Information</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12">
        <form asp-action="Create" method="post" class="p-4 border rounded shadow-sm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Title -->
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter the title here" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Short Description -->
            <div class="form-group mb-3">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" placeholder="Enter short description" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <!-- Posted On -->
            <div class="form-group mb-3">
                <label asp-for="PostedOn" class="control-label"></label>
                <input asp-for="PostedOn" type="date" class="form-control" />
                <span asp-validation-for="PostedOn" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Tags</label>
                <div>
                    @foreach (var tag in ViewBag.Tags)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Tags" value="@tag.Value" id="tag_@tag.Value">
                            <label class="form-check-label" for="tag_@tag.Value">
                                @tag.Text
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>



            <!-- Published -->
            <div class="form-group mb-3">
                <label asp-for="Published" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Published" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" for="Published">Published</label>
                </div>
                <span asp-validation-for="Published" class="text-danger"></span>
            </div>

            <!-- Post Content (CKEditor) -->
            <div class="form-group mb-3">
                <label asp-for="PostContent" class="control-label"></label>
                <textarea asp-for="PostContent" class="form-control" id="PostContent" rows="100" placeholder="Start typing your content here..."></textarea>
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center mb-3">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Create Post</button>
            </div>
            <!-- Back to List Link -->
            <div class="form-group text-center mt-4">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </form>
    </div>
</div>



<!-- CKEditor Custom Style -->
<style>
    #PostContent {
        width: 100%;
        height: 100%; /* Adjust height as needed */
    }
</style>

<!-- CKEditor Script -->
<script src="https://cdn.ckeditor.com/ckeditor5/38.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#PostContent'), {
            toolbar: [
                'undo', 'redo', '|', 'bold', 'italic', 'underline', 'strikethrough', 'link', '|',
                'blockQuote', 'code', 'codeBlock', '|', 'bulletedList', 'numberedList', 'outdent', 'indent', '|',
                'alignment', 'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor', '|',
                'insertTable', 'mediaEmbed', 'imageUpload', '|',
                'horizontalLine', 'specialCharacters', 'highlight', '|',
                'findAndReplace', 'selectAll'
            ],
            language: 'en',
            placeholder: 'Start typing your content here...',
            fontSize: {
                options: ['tiny', 'small', 'default', 'big', 'huge'],
                supportAllValues: true
            },
            fontFamily: {
                options: [
                    'default',
                    'Arial, Helvetica, sans-serif',
                    'Courier New, Courier, monospace',
                    'Georgia, serif',
                    'Times New Roman, Times, serif',
                    'Verdana, Geneva, sans-serif'
                ],
                supportAllValues: true
            },
            image: {
                styles: ['alignLeft', 'alignCenter', 'alignRight', 'full', 'side'],
                toolbar: [
                    'imageTextAlternative', 'imageStyle:alignLeft', 'imageStyle:alignCenter',
                    'imageStyle:alignRight', '|', 'resizeImage', 'linkImage'
                ],
                resizeOptions: [
                    { name: 'resizeImage:original', label: 'Original', value: null },
                    { name: 'resizeImage:50', label: '50%', value: '50' },
                    { name: 'resizeImage:75', label: '75%', value: '75' }
                ],
                upload: { types: ['jpeg', 'png', 'gif', 'bmp', 'webp', 'svg'] }
            },
            mediaEmbed: { previewsInData: true },
            table: { contentToolbar: ['tableColumn', 'tableRow', 'mergeTableCells', 'tableCellProperties', 'tableProperties'] },
            simpleUpload: {
                uploadUrl: '/api/upload', headers: {
                    'X-CSRF-TOKEN': 'YOUR_CSRF_TOKEN'
                }
            }
        })
        .catch(error => {
            console.error(error);
        });
</script>
