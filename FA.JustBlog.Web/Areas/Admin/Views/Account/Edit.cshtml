@model FA.JustBlog.Web.Areas.Admin.Models.Account.EditUserViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="UserName">Username</label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Roles</label><br />
        @if (Model.AllRoles != null && Model.AllRoles.Any())
        {
            foreach (var role in Model.AllRoles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="role_@role" name="SelectedRoles" value="@role"
                    @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label" for="role_@role">@role</label>
                </div>
            }
        }
        else
        {
            <p>No roles available.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
