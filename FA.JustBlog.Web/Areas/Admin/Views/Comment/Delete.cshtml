@model FA.JustBlog.Core.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center text-danger">Delete Comment</h1>

<div class="card shadow-sm border-light">
    <div class="card-body">
        <h3 class="text-danger font-weight-bold">Are you sure you want to delete this comment?</h3>
        <hr />

        <dl class="row">
            <!-- Name -->
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Name)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <!-- Email -->
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Email)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <!-- Comment Header -->
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.CommentHeader)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CommentHeader)</dd>

            <!-- Comment Text -->
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.CommentText)</strong></dt>
            <dd class="col-sm-9">@Html.Raw(Model.CommentText)</dd>

            <!-- Comment Time -->
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.CommentTime)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CommentTime)</dd>

            <!-- Post Content -->
            <dt class="col-sm-3"><strong>@Html.DisplayNameFor(model => model.Post)</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Post.PostContent)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete" class="mr-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-lg btn-danger">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-lg btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    h1 {
        font-size: 2.5rem;
    }

    h3 {
        font-size: 1.75rem;
    }

    .btn {
        font-size: 1.1rem;
        padding: 10px 20px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .d-flex {
        gap: 20px;
    }

    dl {
        margin-top: 20px;
    }
</style>
