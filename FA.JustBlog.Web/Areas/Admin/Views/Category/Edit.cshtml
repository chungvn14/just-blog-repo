@model FA.JustBlog.Web.Areas.Admin.Models.Category.CategoryEditModel


@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4 text-center text-primary">Edit Category</h1>
<h4 class="text-center text-muted mb-4">Edit category details below</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Name -->
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label text-dark">Category Name</label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- URL Slug -->
            <div class="form-group mb-4">
                <label asp-for="UrlSlug" class="control-label text-dark">URL Slug</label>
                <input asp-for="UrlSlug" class="form-control form-control-lg" placeholder="Enter category slug" />
                <span asp-validation-for="UrlSlug" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label text-dark">Description</label>
                <textarea id="description" asp-for="Description" class="form-control" rows="5" placeholder="Enter category description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-4">
                <button type="submit" class="btn btn-success btn-lg btn-block">Save Category</button>
            </div>
        </form>
    </div>
</div>

<div class="form-group text-center">
    <a asp-action="Index" class="btn btn-link text-primary">Back to List</a>
</div>

<style>
    textarea {
        resize: none;
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        font-family: 'Arial', sans-serif;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary, .btn-success {
        font-size: 16px;
        font-weight: bold;
    }

    h1, h4 {
        font-family: 'Roboto', sans-serif;
    }
</style>
@section scripts {
    <script>
        CKEDITOR.replace("description");
    </script>
}